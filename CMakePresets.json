{
  "version": 3,
  "configurePresets": [
    {
      "name": "debug",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "macos",
      "inherits": [
        "debug"
      ],
      "binaryDir": "${sourceDir}/build/macos",
      "cacheVariables": {
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/dist/macos"
      }
    }
  ]
}